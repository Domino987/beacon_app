<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_activity__main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.rwth_aachen.engel.beaconsforproduction.Activity_Main"
    android:layout_margin="15dp"
    tools:showIn="@layout/app_bar_activity__main">
    <android.support.v7.widget.CardView
        android:id="@+id/ordersButton"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@drawable/order"/>
            <TextView
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@color/orange"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="24sp"
                android:text="@string/orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/machinesButton"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@drawable/machine"/>
            <TextView
                android:textColor="@color/white"
                android:padding="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/purple"
                android:gravity="center"
                android:textSize="24sp"
                android:text="@string/machines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
