<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_activity__main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.rwth_aachen.engel.beaconsforproduction.Activity_Main"
    android:layout_margin="15dp"
    tools:showIn="@layout/app_bar_activity__main">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:id="@+id/ordersButton"
        android:text="@string/orders"
        android:gravity="start|center_vertical"
        android:layout_weight="1"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/order"
        android:layout_margin="15dp"
        android:textSize="24sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:id="@+id/machinesButton"
        android:layout_margin="15dp"
        android:text="@string/machines"
        android:gravity="start|center_vertical"
        android:layout_weight="1"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/machine"
        android:textSize="24sp"/>
</LinearLayout>
